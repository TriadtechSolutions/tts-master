<section class="testimonials-section">
  {% if content.field_bg_image['#items'] %}
    <div class="testimonials-bg-image-wrapper">
      <img src="{{ file_url(content.field_bg_image['#items'].entity.field_media_image.entity.fileuri) }}" 
           alt="{{ content.field_bg_image['#items'].entity.field_media_image.alt }}" 
           class="testimonials-bg-image">
    </div>
  {% endif %}

  <div class="testimonials-container">
    <div class="testimonials-header">
      {% if content.field_title %}
        <h2 class="testimonials-title">{{ content.field_title.0 }}</h2>
      {% endif %}
      {% if content.field_subtitle %}
        <p class="testimonials-subtitle">{{ content.field_subtitle.0 }}</p>
      {% endif %}
    </div>
  
    <div class="testimonials-grid">
      {% for item in content.field_testimonial ['#items']%}
        {% if item.entity %}
          <div class="testimonial-card">
            <div class="testimonial-content">
              {{ item.entity.field_body.value|raw }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
